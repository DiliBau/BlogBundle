<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>{{ title }}</title>
        <link>{{ path('_default') }}</link>
        <description></description>
        <language>es_ES</language>
        <pubDate>{{ 'now'|date('r') }}</pubDate>
        <lastBuildDate>{{ 'now'|date('r') }}</lastBuildDate>
        <generator>Desarrolla2 BlogBundle</generator>
        <atom:link href="{{ path('_feed') }}" rel="self" type="application/rss+xml" />        
        {% for item in items %}        
        <item>
            <title>{{ item.name }}</title>
            <link>{{ url('_view', { 'slug' : item.slug }) }}</link>
            <description>
                <![CDATA[{{ item.content | raw }}]]>
            </description>
            <guid>{{ url('_view', { 'slug' : item.slug }) }}</guid>
            <pubDate>{{ item.createdAt | date('r') }}</pubDate>
        </item>
        {% endfor %}

    </channel>
</rss>