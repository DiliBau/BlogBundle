<div class="row-fluid">
    {% for post in related %}
        <div class="span4">
            {% if post.hasImage %}
                <img src="{{ post.image }}" />
            {% endif %}
            <a href="{{ url('_view', { 'slug' : post.slug }) }}">{{ post }}</a>
        </div>
    {% else %}
        <p>No hay elementos</p>
    {% endfor %}
</div>
