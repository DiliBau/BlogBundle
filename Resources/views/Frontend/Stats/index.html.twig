{% extends "::frontend.html.twig" %}
{% block content %}
<article class="post">
    <header>
        <h2><a href="{{ url('_stats')}}" title="stats">Stats</a></h2>            
    </header>
    <h3>Entradas publicadas</h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Post</th>
                <th>Comentarios</th>
                <th>Enlaces</th>
            </tr>        
        </thead>
        <tr>
            <td>Ultima semana</td>
            <td>{{ post.last_week}}</td>
            <td>{{ comment.last_week}}</td>
            <td>{{ link.last_week}}</td>
        </tr>    
        <tr>
            <td>Ultimo mes</td>
            <td>{{ post.last_month}}</td>
            <td>{{ comment.last_month}}</td>
            <td>{{ link.last_month}}</td>
        </tr>    
        <tr>
            <td>Ultimo a√±o</td>
            <td>{{ post.last_year}}</td>
            <td>{{ comment.last_year}}</td>
            <td>{{ link.last_year}}</td>
        </tr>
        <tr>
            <td>Total</td>
            <td>{{ post.total}}</td>
            <td>{{ comment.total}}</td>
            <td>{{ link.total}}</td>
        </tr>
    </table>
</article>
{% endblock %}