<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="blog.twig.extension.class">Desarrolla2\Bundle\BlogBundle\Twig\TwigExtension</parameter>
        <parameter key="blog.exception.listener.class">Desarrolla2\Bundle\BlogBundle\Listener\ExceptionListener</parameter>
    </parameters>

    <services>
        <service id="blog.twig.extension" class="%blog.twig.extension.class%">
            <argument>%locale%</argument>
            <tag name="twig.extension" />
        </service>
        
        <service id="blog.exception.listener" class="%blog.exception.listener.class%">
            <argument id="mailer" type="service" />
            <argument type="string" >%error_sender%</argument>
            <argument type="string" >%error_email%</argument>
            <argument type="string" >%error_title%</argument>
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" />
        </service>        
        
    </services>    
</container>